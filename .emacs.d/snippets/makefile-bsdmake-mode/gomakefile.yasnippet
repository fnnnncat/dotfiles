# -*- mode: snippet -*-
# name: gomakefile
# key: gomakefile
# --
#/bin/bash
GOCMD=go
GOBUILD=$(GOCMD) build
GOCLEAN=$(GOCMD) clean
GOTEST=$(GOCMD) test
GOGET=$(GOCMD) get
BINARY_NAME=$1
OUTPUT=${2:main.go}

all: build

build:
	$(GOBUILD) -o $(BINARY_NAME) -v $(OUTPUT)

test:
	$(GOTEST) -v ./...

clean:
	$(GOCLEAN)
	rm -f $(BINARY_NAME)

run:
	$(GOBUILD) -o $(BINARY_NAME) -v $(OUTPUT)
	./$(BINARY_NAME)
$0
